
<div class="solver-control" id="solver-anchor">
   
<Container Fluid="false">
    <Row>
        <Column style="padding:0;" ColumnSize="ColumnSize.IsFull.OnMobile.Is6.OnTablet.Is4.OnDesktop.Is2.OnWidescreen" >
        
            @* TODO: Make Rewind and FastForward buttons do something! *@
            <div class="solver-button-group">
                <Button class="btn-round btn-round-small" Disabled="true">
                    <Blazorise.Icon Name="MaterialIcons.FastRewind"/>
                </Button>

                <Button @onclick="@ToggleSolve" class="btn-round" >
                    <Blazorise.Icon Name="@PlayIcon"/>
                </Button>
                
                <Button class="btn-round btn-round-small" Disabled="true">
                    <Blazorise.Icon Name="MaterialIcons.FastForward"/>
                </Button>

                <Button class="btn-round btn-round-small d-sm-none d-block"
                        style="position: absolute; right: 50px; bottom: 10px; z-index: 1000;"
                        @onclick="@ToggleSettings">
                    <Blazorise.Icon Name="@SettingsIcon"/>
                </Button>

                 <Button class="btn-round btn-round-small d-sm-none d-block"
                         style="position: absolute; right: 1px; bottom: 10px; z-index: 1000;"
                         onclick="document.getElementById('problem-anchor').scrollIntoView({behavior:'smooth'})">
                    <Blazorise.Icon Name="MaterialIcons.HelpOutline"/>
                </Button>
            </div>

        </Column>

        <Column class="@SelectorClass" ColumnSize="ColumnSize.Is6.OnMobile.Is6.OnTablet.Is4.OnDesktop.Is2.OnWidescreen" >
            <SelectControl
                Label="Generations"
                Choices="@generationChoices"
                @bind-Value="@SolverParameters.Generations" />
        </Column>

        <Column class="@SelectorClass" ColumnSize="ColumnSize.Is6.OnMobile.Is6.OnTablet.Is4.OnDesktop.Is2.OnWidescreen" >
            <SelectControl
                Label="Population"
                Choices="@populationChoices"
                @bind-Value="@SolverParameters.Population" />
        </Column>

        <Column class="@SelectorClass" ColumnSize="ColumnSize.Is6.OnMobile.Is6.OnTablet.Is4.OnDesktop.Is2.OnWidescreen" >
            <SelectControl
                Label="Selection"
                Choices="@selectionChoices"
                @bind-Value="@SolverParameters.Selection" />
        </Column>

        <Column class="@SelectorClass" ColumnSize="ColumnSize.Is6.OnMobile.Is6.OnTablet.Is4.OnDesktop.Is2.OnWidescreen" >
            <SelectControl
                Label="Crossover %"
                Choices="@crossoverChoices"
                @bind-Value="@SolverParameters.CrossoverProbability" />
        </Column>

        <Column class="@SelectorClass" ColumnSize="ColumnSize.Is6.OnMobile.Is6.OnTablet.Is4.OnDesktop.Is2.OnWidescreen" >
            <SelectControl
                Label="Mutation %"
                Choices="@mutationChoices"
                @bind-Value="@SolverParameters.MutationProbability" />
        </Column>
    </Row>
</Container>

</div>